    display:inline-block;
    width:40%;
}


#login {
border-right:1px solid #fff;
  padding: 0px 22px;
  width: 60%;
}

#login form span.fa-user {
    background-color: #fff;
    border-radius: 5px 0px 0px 5px;
    color: #37474f;
    display: block;
    float: left;
    height: 50px;
    font-size:24px;
    line-height: 50px;
    text-align: center;
    width: 50px;
}

#login form span.fa-lock {
    background-color: #fff;
    border-radius: 5px 0px 0px 5px;
    color: #37474f;
    display: block;
    float: left;
    height: 50px;
    font-size:24px;
    line-height: 50px;
    text-align: center;
    width: 50px;
}

#login form span.fa-eye {
    background-color: #fff;
    border-radius: 0px 5px 5px 0px;
    color: #37474f;
    display: block;
    float: left;
    height: 50px;
    font-size:24px;
    line-height: 50px;
    text-align: center;
    width: 50px;
}

#login form #username {
    border-radius: 0px 5px 5px 0px;
}

span.fa-eye, span.fa-eye-slash {
    float: right !important;
    
}

#login form input {
    height: 50px;
}
fieldset{
    padding:0;
    border:0;
    margin: 0;

}
#login form input[type="text"], input[type="password"] {
    background-color: #fff;
    border-radius: 0px 0px 0px 0px;
    color: #000;
    margin-bottom: 1em;
    padding: 0 16px;
    width: 200px;
}

#password {
    width: 150px !important;
}

#login form input[type="submit"] {
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  background-color: #263238;
  color: #eee;
  font-weight: bold;
  /* margin-bottom: 2em; */
  text-transform: uppercase;
  padding: 5px 10px;
  height: 40px;
}

#login form input[type="submit"]:hover {
    background-color: #111;
}

#login > p {
    text-align: center;
}

#login > p span {
    padding-left: 5px;
}
