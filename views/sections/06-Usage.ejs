<!-- Displaying usage questions -->
<div class="container">
    <p><b>Usage</b></p>
    <div id="usage" class="display-header">
        <div id="usageContainer">
            <div class="edit pull-right">
                <a href="#/" id="editUsageLink" aria-hidden="true" data-toggle="modal">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"> Edit</i>
                </a>
            </div>
            <br>

            <form id="usageForm" autocomplete="off" action="../index/<%= encodeURIComponent(result.customer.name) %>?_method=PUT" method="POST">
                <fieldset id="usageFormFieldset" disabled>
                    <div class="form-group col-4 response-cell" hidden>
                        <label for="customerName">Customer Name</label>
                        <input type="text" readonly class="form-control" placeholder="No response set" value="<%= result.customer.name %>" name="usage_questions[name]">
                    </div>
                    <% include Usage/EditUsageLegal.ejs %>
                    <% include Usage/EditUsageExport.ejs %>

                    <!-- Outlook view manager -->


                    <div class="row">
                        <div class="form-group col-4 response-cell">
                            <label>Will end user have access to their archives?</label>
                            <%- make_custom_dropdown("usage_questions[allow_archive_access]",
                                result.usage_questions.allow_archive_access, ["Yes", "No"]) %>
                        </div>
                    </div>

                    <br>
                    <div class="form-group">
                        <label>Comments</label>
                        <textarea class="form-control" maxlength="5000" rows="5" name="usage_questions[comments]" placeholder="5000 characters max" form="usageForm"><%- result.usage_questions.comments %></textarea>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>