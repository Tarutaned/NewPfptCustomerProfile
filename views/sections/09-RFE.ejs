<!-- Displaying RFEs -->
<div class="container">
    <p><b>RFEs</b></p>
    <div id="rfes" class="display-header">
        <div id="rfeContent">
            <div class="edit pull-right">
                <a href="#/" aria-hidden="true" id="editRFELink" data-toggle="modal">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"> Edit</i>
                </a>
            </div>
            <br>

            <form id="rfeForm" autocomplete="off" action="../index/<%= encodeURIComponent(result.customer.name) %>?_method=PUT" method="POST">
                <fieldset id="rfeFormFieldset" disabled>
                    <div class="form-group col-4 response-cell" hidden>
                        <label for="customerName">Customer Name</label>
                        <input type="text" readonly class="form-control" placeholder="No response set" value="<%= result.customer.name %>" name="rfe_questions[name]">
                    </div>
                    <div class="row">
                        <div class="form-group col-4 response-cell">
                            <label>Showstoppers (Will not buy w/o)</label>
                            <input type="text" class="form-control" placeholder="No response set" value="<%= result.rfe_questions.showstoppers_buy %>" name="rfe_questions[showstoppers_buy]">
                        </div>
                        <div class="form-group col-4 response-cell">
                            <label>Showstoppers (Will not rollout w/o)</label>
                            <input type="text" class="form-control" placeholder="No response set" value="<%= result.rfe_questions.showstoppers_rollout %>" name="rfe_questions[showstoppers_rollout]">
                        </div>
                        <div class="form-group col-4 response-cell">
                            <label>Parity features</label>
                            <input type="text" class="form-control" placeholder="No response set" value="<%= result.rfe_questions.parity_features %>" name="rfe_questions[parity_features]">
                        </div>
                        <div class="form-group col-4 response-cell">
                            <label>Nice to haves</label>
                            <input type="text" class="form-control" placeholder="No response set" value="<%= result.rfe_questions.nice_to_haves %>" name="rfe_questions[nice_to_haves]">
                        </div>
                    </div>

                    <br>
                    <div class="form-group">
                        <label>Comments</label>
                        <textarea class="form-control" maxlength="5000" rows="5" name="rfe_questions[comments]" placeholder="5000 characters max" form="rfeForm"><%= result.rfe_questions.comments %></textarea>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    <hr class="rainbow">
</div>
