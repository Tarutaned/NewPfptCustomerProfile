<div id="editExchangeDetails">
    <div class="row">
        <div class="col-xl-6 mt-2" style="background-color:white;">
            <div class="card h-100">
                <div class="card-header">
                    <h4 class="mb-0">On-Premise Exchange</h4>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label form-control-label">Number of users per journaling location</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" placeholder="No response set" value="<%= result.email_questions.exchange_details.users_per_location %>"
                                name="email_questions[exchange_details][users_per_location]">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label form-control-label">Exchange Version</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control exchange_version required" placeholder="No response set" value="<%= result.email_questions.exchange_details.exchange_version %>"
                            name="email_questions[exchange_details][exchange_version]">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label form-control-label">Number of Exchange Locations</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control number_of_mail_servers" placeholder="No response set" value="<%= result.email_questions.exchange_details.number_of_mail_servers %>"
                            name="email_questions[exchange_details][number_of_mail_servers]">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label form-control-label">Enterprise CAL</label>
                        <div class="col-lg-8">
                            <%- make_custom_dropdown("email_questions[exchange_details][has_enterprise_CAL]",
                            result.email_questions.exchange_details.has_enterprise_CAL, ["Yes", "No"], "has_enterprise_CAL") %>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label form-control-label">Does Exchange get Replicated to a Secondary Location</label>
                        <div class="col-lg-8">
                            <%- make_custom_dropdown("email_questions[exchange_details][is_replicating_exchange_and_AD]",
                            result.email_questions.exchange_details.is_replicating_exchange_and_AD, ["Yes", "No"]) %>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label form-control-label">Number of Journal mailboxes</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control number_of_inboxes" placeholder="No response set" value="<%= result.email_questions.exchange_details.number_of_inboxes %>"
                            name="email_questions[exchange_details][number_of_inboxes]">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label form-control-label">Are journal mailboxes on their own DB?</label>
                        <div class="col-lg-8">
                            <%- make_custom_dropdown("email_questions[exchange_details][is_journal_in_own_DB]",
                            result.email_questions.exchange_details.is_journal_in_own_DB, ["Yes", "No"], "is_journal_in_own_DB") %>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label form-control-label">How much extra storage is available on the Journaling Mailbox Databases?</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control number_of_extra_storage" placeholder="No response set" value="<%= result.email_questions.exchange_details.number_of_extra_storage %>"
                            name="email_questions[exchange_details][number_of_extra_storage]">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label form-control-label">Using RMS</label>
                        <div class="col-lg-8">
                            <%- make_custom_dropdown("email_questions[exchange_details][is_using_RMS]",
                            result.email_questions.exchange_details.is_using_RMS, ["Yes", "No"], "is_using_RMS") %>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label form-control-label">Is Enable Journal Decryption set to True / False?</label>
                        <div class="col-lg-8">
                            <%- make_custom_dropdown("email_questions[exchange_details][is_journal_decryption_enabled]",
                        result.email_questions.exchange_details.is_journal_decryption_enabled, ["Yes", "No"], "is_journal_decryption_enabled") %>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label form-control-label">How are your journal rules defined (hub transport or database)?</label>
                        <div class="col-lg-8">
                            <%- make_custom_dropdown("email_questions[exchange_details][journal_rules]",
                        result.email_questions.exchange_details.journal_rules, ["Hub transport", "Database"]) %>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
