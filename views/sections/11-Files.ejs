<div class="godown-60" id="godown"></div>

<div class="container">
    <div class="row">
        <div class="col-md-6 m-auto">

            <div class="card">
                <div class="card-header">
                    <strong>User: </strong><%= locals.user.sAMAccountName %>
                    <strong>Customer: </strong><%= locals.result.customer.name %>
                </div>
                <div class="card-body">
                    <%= Object.keys(locals.result) %>
                </div>
                <div class="card-footer">
                    <a href="http://localhost/index/Test">Refresh Test</a>
                </div>
            </div>
        </div>
    </div>


    <!-- Upload Row -->
    <div class="row">
        <div class="col-md-6 m-auto">
            <h6 class="text-center display-4 my-4">Upload a File</h6>
            <form action="/upload" method="post" enctype="multipart/form-data">
                <div class="custom-file mb-3">
                    <input type="file" name="file" id="file" class="custom-file-input" />
                    <label for="file" class="custom-file-label">Choose File</label>
                </div>
                <input type="hidden" id="customername" name="customername" value="<%= locals.result.customer.name %>"/>
                <input type="submit" class="btn btn-primary btn-block">
            </form>
        </div>
    </div>
    <!-- File List Table Row -->
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center display-4 my-4">The List of Files</h1>
         
        <% if (!locals.files) { %>
            <p>No files exist. Upload a file using the form above.</p>
        <% } else { %>
        <div class="table-responsive-lg">
            <table class="table table-hover">
                <thead>
                    <tr>
                      <th>File ID</th>
                      <th>Uploaded</th>
                      <th>Filename</th>
                      <th>Type</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                <% files.forEach(element => { %>
                    <tr>
                        <td> <a href="/files/<%= element.filename %>"><%= element._id %></a> </td>
                        <td><%= element.uploadDate.toDateString() %></td>
                        <td> <a href="/getfile/<%= element._id %>"><%= element.filename %></a> </td>
                        <td> 
                            <% if (element.contentType == 'image/jpeg' || element.contentType == 'image/png') { %> 
                                <a href="/image/<%= element.filename %>" class="btn btn-primary btn-block"><%= element.contentType %></a>
                            <% } else { %>
                                <a href="#" class="btn btn-secondary btn-block disabled"><%= element.contentType %></a>
                            <% } %>
                        </td>
                        <td> 
                            <form method="POST" action="/delete/<%= element._id %>">
                                <button type="submit" class="button btn btn-danger btn-block">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </table>
        </div>
        <% } %>
            
        </div>
    </div>
</div>

<script>
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function() {
      var fileName = $(this).val().split("\\").pop();
      $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>